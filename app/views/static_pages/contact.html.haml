- provide(:title, "Contact")

/ Page Content
.container
  / Page Heading/Breadcrumbs
  .row
    .col-lg-12
      / %h1.page-header
      /   Contact
      /   %small Subheading
      :markdown
        #Contact
        Contact the Ruby on Rails Tutorial about the sample app at the
        [Contact page](http://www.railstutorial.org/#contact).
      %ol.breadcrumb
        %li= link_to "Home", root_path
        %li.active Contact

  / Content Row
  .row
    / Map Column
    .col-md-8
      / Embedded Google Map
      %iframe{ frameborder: "0", height: "400px", marginheight: "0", marginwidth: "0", scrolling: "no",
      src: "http://maps.google.com/maps?hl=en&amp;ie=UTF8&amp;ll=37.0625,-95.677068&amp;spn=56.506174,79.013672&amp;t=m&amp;z=4&amp;output=embed",
      :width => "100%" }

    / Contact Details Column
    .col-md-4
      %h3 Contact Details
      %p
        1234 1st St NW
        %br
          Washington, DC 22222
          %br
      %p
        %i.fa.fa-phone
        = succeed ":" do
          %abbr{:title => "Phone"} P
        (123) 456-7890
      %p
        %i.fa.fa-envelope-o
        = succeed ":" do
          %abbr{:title => "Email"} E
        %a{:href => "mailto:name@example.com"} name@example.com
      %p
        %i.fa.fa-clock-o
        = succeed ":" do
          %abbr{:title => "Hours"} H
        Monday - Friday: 9:00 AM to 5:00 PM
      %ul.list-unstyled.list-inline.list-social-icons
        %li
          %a{ href: "#" }
            %i.fa.fa-facebook-square.fa-2x
        %li
          %a{ href: "https://www.linkedin.com/profile/view?id=101724080", target: '_blank' }
            %i.fa.fa-linkedin-square.fa-2x
        %li
          %a{ href: "https://twitter.com/MNishiguchiDC", target: '_blank' }
            %i.fa.fa-twitter-square.fa-2x
        %li
          %a{ href: "#" }
            %i.fa.fa-google-plus-square.fa-2x

  / Contact Form
  / In order to set the email address and subject line for the contact form go to the bin/contact_me.php file.
  .row
    .col-md-8
      %h3 Send us a Message
      %form#contactForm{:name => "sentMessage", :novalidate => ""}
        .control-group.form-group
          .controls
            %label Full Name:
            %input{ id: 'name', class: 'form-control',
                    data: { "validation-required-message" => "Please enter your name." },
                    required: "", type: "text" }
              %p.help-block
        .control-group.form-group
          .controls
            %label Phone Number:
            %input{ id: 'phone', class: 'form-control',
                    data: { "validation-required-message" => "Please enter your phone number." },
                    required: "", type: "tel" }
        .control-group.form-group
          .controls
            %label Email Address:
            %input{ id: 'email', class: 'form-control',
                    data: { "validation-required-message" => "Please enter your email address." },
                    required: "", type: "email" }
        .control-group.form-group
          .controls
            %label Message:
            %textarea{ id: 'message', class: 'form-control',
                    data: { "validation-required-message" => "Please enter your message" },
                    rows: "10", cols: "100", :maxlength => "999",
                    style: "resize:none",
                    required: "", type: "email" }
        #success
        / For success/fail messages
        %button.btn.btn-primary{:type => "submit"} Send Message

/ Contact Form JavaScript
/ Do not edit these files! In order to set the email address and subject line for the contact form go to the bin/contact_me.php file.
%script{:src => "js/jqBootstrapValidation.js"}
%script{:src => "js/contact_me.js"}
