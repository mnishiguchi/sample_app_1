  #sample_scrollspy.col-md-6
    %h1 BS3 Scrollspy

    / Navigation
    -# .navbar           : to mark it as a navbar
    -# .navbar-default   : to enable the color scheme)
    -# .navbar-static    : to allow it to scroll with the page)
    -# role='navigation  : for accessibility
    -# id                : required to get the current position from the content
    -# position:relative : to ensure the tabs highlight correctly as the user scrolls
    %div{ style: 'position:relative;' }
      %nav{ class: ['navbar', 'navbar-default', 'navbar-static'],
        role: 'navigation', id: 'navbar-spy' }
        %ul.nav.navbar-nav
          %li.active
            %a{ href: '#scroll-1' }
              First
          %li
            %a{ href: '#scroll-2' }
              Second
          %li
            %a{ href: '#scroll-3' }
              Third

    / Content
    -# data-target='#id' : to send the current position to the navigation
    -# data-spy='scroll' : required
    -# position:relative : to ensure the tabs highlight correctly as the user scrolls
    %div{ data: { target: '#navbar-spy', spy: 'scroll' },
      style: 'height:150px; overflow-y:scroll; position:relative;' }
